{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "sourceMap": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
