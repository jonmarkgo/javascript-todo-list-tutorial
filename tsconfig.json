{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "tape"],
    "moduleResolution": "node"
  },
  "include": [
    "test/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
