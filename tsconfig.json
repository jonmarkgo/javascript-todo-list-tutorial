{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2018",
    "lib": ["dom", "es2018"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Paths */
    "rootDir": ".",
    "outDir": "./dist",

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "sourceMap": true,

    /* Type Checking */
    "strict": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Additional Options */
    "types": ["jest"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*.ts",
    "lib/**/*.ts",
    "*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
