{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "tape", "jsdom"]
  },
  "include": [
    "lib/**/*",
    "test/**/*",
    "test/declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
