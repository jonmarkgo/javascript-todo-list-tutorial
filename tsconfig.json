{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"]
    },
    "outDir": "./dist"
  },
  "include": ["lib/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
