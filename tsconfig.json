{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
